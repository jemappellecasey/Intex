<%# We use this form to add or update a user's account details and role. %>
<!-- FILE: views/userForm.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user ? 'Edit User' : 'Add User' %> - Ella Rises</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav class="navbar">
    <div class="nav-container">
      <div class="nav-brand">ðŸŽµ Ella Rises</div>
      <ul class="nav-menu">
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/users">Users</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
  </nav>
  <main class="main-container">
    <div class="container form-container">
      <h1><%= user ? 'Edit User' : 'Add New User' %></h1>
      <form method="POST" action="<%= user ? '/users/' + user.id + '/edit' : '/users/add' %>" class="form">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-group">
          <label for="username">Username *</label>
          <input type="text" id="username" name="username" value="<%= user ? user.username : '' %>" required>
        </div>
        <div class="form-group">
          <label for="password"><%= user ? 'New Password (leave blank to keep current)' : 'Password' %> *</label>
          <input type="password" id="password" name="password" <%= user ? '' : 'required' %>>
        </div>
        <div class="form-group">
          <label for="role">Role *</label>
          <select id="role" name="role" required>
            <option value="">-- Select Role --</option>
            <option value="M" <%= user && user.role === 'M' ? 'selected' : '' %>>Manager</option>
            <option value="U" <%= user && user.role === 'U' ? 'selected' : '' %>>User</option>
          </select>
        </div>
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Save</button>
          <a href="/users" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </main>
  <footer class="footer">
    <p>&copy; 2025 Ella Rises</p>
  </footer>
</body>
</html>
