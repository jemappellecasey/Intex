<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users - Ella Rises</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav class="navbar">
    <div class="nav-container">
      <div class="nav-brand">üéµ Ella Rises</div>
      <ul class="nav-menu">
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/users">Users</a></li>
        <li><a href="/participants">Participants</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
  </nav>
  <main class="main-container">
    <% if (error_message) { %>
      <div class="alert alert-error">‚ùå <%= error_message %></div>
    <% } %>
    <% if (success_message) { %>
      <div class="alert alert-success">‚úÖ <%= success_message %></div>
    <% } %>
    <div class="container">
      <div class="page-header">
        <h1>User Management</h1>
        <a href="/users/add" class="btn btn-primary">+ Add User</a>
      </div>
      <form method="get" class="search-form">
        <input type="text" name="search" placeholder="Search by username..." value="<%= search %>" class="search-input">
        <button type="submit" class="btn btn-small">Search</button>
      </form>
      <% if (users && users.length > 0) { %>
        <table class="data-table">
          <thead>
            <tr>
              <th>Username</th>
              <th>Role</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.username %></td>
                <td><span class="badge badge-primary"><%= user.role === 'M' ? 'Manager' : 'User' %></span></td>
                <td><%= new Date(user.created_at).toLocaleDateString() %></td>
                <td class="actions">
                  <a href="/users/<%= user.id %>/edit" class="btn btn-small">Edit</a>
                  <form method="post" action="/users/<%= user.id %>/delete" style="display:inline;">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-small btn-danger" onclick="return confirm('Delete this user?');">Delete</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <p class="text-muted">No users found</p>
      <% } %>
    </div>
  </main>
  <footer class="footer">
    <p>&copy; 2025 Ella Rises</p>
  </footer>
</body>
</html>
