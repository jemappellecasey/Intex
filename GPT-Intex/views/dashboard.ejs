<%# We use this dashboard page to show quick stats and lists for the manager in the classic view. %>
<!-- FILE: views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Ella Rises</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav class="navbar">
    <div class="nav-container">
      <div class="nav-brand">ğŸµ Ella Rises</div>
      <ul class="nav-menu">
        <li><a href="/dashboard">Dashboard</a></li>
        <% if (isManager) { %>
          <li><a href="/users">Users</a></li>
        <% } %>
        <li><a href="/participants">Participants</a></li>
        <li><a href="/events">Events</a></li>
        <li><a href="/surveys">Surveys</a></li>
        <li><a href="/donations">Donations</a></li>
        <li><a href="/logout" class="nav-logout">Logout</a></li>
      </ul>
    </div>
  </nav>
  <main class="main-container">
    <% if (error_message) { %>
      <div class="alert alert-error">âŒ <%= error_message %></div>
    <% } %>
    <div class="container">
      <h1>Dashboard</h1>
      <p class="welcome-text">Welcome back, <%= user.username %>!</p>
      <div class="stats-grid">
        <div class="stat-card">
          <h3>Total Participants</h3>
          <p class="stat-number"><%= totalParticipants %></p>
        </div>
        <div class="stat-card">
          <h3>Total Events</h3>
          <p class="stat-number"><%= totalEvents %></p>
        </div>
        <div class="stat-card">
          <h3>Upcoming Events</h3>
          <p class="stat-number"><%= upcomingEvents.length %></p>
        </div>
        <div class="stat-card">
          <h3>Recent Surveys</h3>
          <p class="stat-number"><%= recentSurveys.length %></p>
        </div>
      </div>
      <section class="section">
        <h2>ğŸ“… Upcoming Events</h2>
        <% if (upcomingEvents && upcomingEvents.length > 0) { %>
          <div class="event-list">
            <% upcomingEvents.forEach(event => { %>
              <div class="event-item">
                <h4><%= event.event_name %></h4>
                <p>ğŸ“ <%= event.event_location || 'TBD' %></p>
                <p>ğŸ• <%= new Date(event.event_date_time_start).toLocaleString() %></p>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <p class="text-muted">No upcoming events scheduled</p>
        <% } %>
      </section>
      <section class="section">
        <h2>Quick Links</h2>
        <div class="quick-links">
          <a href="/participants" class="link-card">ğŸ‘¥ Manage Participants</a>
          <a href="/events" class="link-card">ğŸ“… Manage Events</a>
          <a href="/surveys" class="link-card">ğŸ“Š View Surveys</a>
          <a href="/donations" class="link-card">ğŸ’ Track Donations</a>
        </div>
      </section>
    </div>
  </main>
  <footer class="footer">
    <p>&copy; 2025 Ella Rises</p>
  </footer>
</body>
</html>
