<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'Ella Rises' %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <!-- Navigation Bar -->
  <% if (isLoggedIn) { %>
    <nav class="navbar">
      <div class="nav-container">
        <div class="nav-brand">üéµ Ella Rises</div>
        <ul class="nav-menu">
          <li><a href="/dashboard">Dashboard</a></li>
          <li><a href="/users">Users</a></li>
          <li><a href="/participants">Participants</a></li>
          <li><a href="/events">Events</a></li>
          <li><a href="/surveys">Surveys</a></li>
          <li><a href="/donations">Donations</a></li>
          <li><a href="/logout" class="nav-logout">Logout (<%= user.username %>)</a></li>
        </ul>
      </div>
    </nav>
  <% } %>

  <!-- Main Content -->
  <main class="main-container">
    <!-- Alert Messages -->
    <% if (error_message) { %>
      <div class="alert alert-error">
        <span class="alert-icon">‚ùå</span>
        <%= error_message %>
        <button class="alert-close" onclick="this.parentElement.style.display='none';">√ó</button>
      </div>
    <% } %>
    
    <% if (success_message) { %>
      <div class="alert alert-success">
        <span class="alert-icon">‚úÖ</span>
        <%= success_message %>
        <button class="alert-close" onclick="this.parentElement.style.display='none';">√ó</button>
      </div>
    <% } %>

    <!-- Page Content -->
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <p>&copy; 2025 Ella Rises - Empowering the future generation of women</p>
  </footer>

  <script>
    // Auto-hide alerts after 5 seconds
    document.querySelectorAll('.alert').forEach(alert => {
      setTimeout(() => {
        alert.style.display = 'none';
      }, 5000);
    });
  </script>
</body>
</html>
