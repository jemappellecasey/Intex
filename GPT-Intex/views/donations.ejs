<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Donations - Ella Rises</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav class="navbar">
    <div class="nav-container">
      <div class="nav-brand">üéµ Ella Rises</div>
      <ul class="nav-menu">
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/donations">Donations</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
  </nav>
  <main class="main-container">
    <% if (error_message) { %>
      <div class="alert alert-error">‚ùå <%= error_message %></div>
    <% } %>
    <% if (success_message) { %>
      <div class="alert alert-success">‚úÖ <%= success_message %></div>
    <% } %>
    <div class="container">
      <div class="page-header">
        <h1>Donations</h1>
        <a href="/donations/new" class="btn btn-primary">+ Make Donation</a>
        <% if (isManager) { %>
          <a href="/donations/add" class="btn btn-secondary">+ Record Donation</a>
        <% } %>
      </div>

      <div class="donation-summary">
        <div class="summary-card">
          <h3>Total Donations</h3>
          <p class="summary-value">$<%= totalDonations %></p>
        </div>
      </div>

      <form method="get" class="search-form">
        <input type="text" name="search" placeholder="Search by donor name or email..." value="<%= search %>" class="search-input">
        <button type="submit" class="btn btn-small">Search</button>
      </form>

      <% if (donations && donations.length > 0) { %>
        <table class="data-table">
          <thead>
            <tr>
              <th>Donor Name</th>
              <th>Email</th>
              <th>Amount</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% donations.forEach(d => { %>
              <tr>
                <td><%= d.participant_first_name %> <%= d.participant_last_name %></td>
                <td><%= d.email %></td>
                <td><strong>$<%= parseFloat(d.donation_amount).toFixed(2) %></strong></td>
                <td><%= new Date(d.donation_date).toLocaleDateString() %></td>
                <td class="actions">
                  <% if (isManager) { %>
                    <a href="/donations/<%= d.id %>/edit" class="btn btn-small">Edit</a>
                    <form method="post" action="/donations/<%= d.id %>/delete" style="display:inline;">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button type="submit" class="btn btn-small btn-danger" onclick="return confirm('Delete this donation?');">Delete</button>
                    </form>
                  <% } else { %>
                    <span class="text-muted">Recorded</span>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <p class="text-muted">No donations found</p>
      <% } %>
    </div>
  </main>
  <footer class="footer">
    <p>&copy; 2025 Ella Rises</p>
  </footer>
</body>
</html>
