<%# We made this events page to list events with their dates and let managers edit or delete. %>
<!-- FILE: views/events.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Events - Ella Rises</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav class="navbar">
    <div class="nav-container">
      <div class="nav-brand">üéµ Ella Rises</div>
      <ul class="nav-menu">
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/events">Events</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
  </nav>
  <main class="main-container">
    <% if (error_message) { %>
      <div class="alert alert-error">‚ùå <%= error_message %></div>
    <% } %>
    <% if (success_message) { %>
      <div class="alert alert-success">‚úÖ <%= success_message %></div>
    <% } %>
    <div class="container">
      <div class="page-header">
        <h1>Events</h1>
        <% if (isManager) { %>
          <a href="/events/add" class="btn btn-primary">+ Add Event</a>
        <% } %>
      </div>
      <form method="get" class="search-form">
        <input type="text" name="search" placeholder="Search by name or type..." value="<%= search %>" class="search-input">
        <button type="submit" class="btn btn-small">Search</button>
      </form>
      <% if (events && events.length > 0) { %>
        <table class="data-table">
          <thead>
            <tr>
              <th>Event Name</th>
              <th>Type</th>
              <th>Date & Time</th>
              <th>Location</th>
              <th>Capacity</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% events.forEach(event => { %>
              <tr>
                <td><%= event.event_name %></td>
                <td><%= event.event_type || 'N/A' %></td>
                <td><%= new Date(event.event_date_time_start).toLocaleString() %></td>
                <td><%= event.event_location || 'N/A' %></td>
                <td><%= event.event_default_capacity %></td>
                <td class="actions">
                  <% if (isManager) { %>
                    <a href="/events/<%= event.id %>/edit" class="btn btn-small">Edit</a>
                    <form method="post" action="/events/<%= event.id %>/delete" style="display:inline;">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button type="submit" class="btn btn-small btn-danger" onclick="return confirm('Delete this event?');">Delete</button>
                    </form>
                  <% } else { %>
                    <span class="text-muted">View Only</span>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <p class="text-muted">No events found</p>
      <% } %>
    </div>
  </main>
  <footer class="footer">
    <p>&copy; 2025 Ella Rises</p>
  </footer>
</body>
</html>
