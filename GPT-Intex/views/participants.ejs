<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Participants - Ella Rises</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav class="navbar">
    <div class="nav-container">
      <div class="nav-brand">üéµ Ella Rises</div>
      <ul class="nav-menu">
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/participants">Participants</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
  </nav>
  <main class="main-container">
    <% if (error_message) { %>
      <div class="alert alert-error">‚ùå <%= error_message %></div>
    <% } %>
    <% if (success_message) { %>
      <div class="alert alert-success">‚úÖ <%= success_message %></div>
    <% } %>
    <div class="container">
      <div class="page-header">
        <h1>Participants</h1>
        <% if (isManager) { %>
          <a href="/participants/add" class="btn btn-primary">+ Add Participant</a>
        <% } %>
      </div>
      <form method="get" class="search-form">
        <input type="text" name="search" placeholder="Search by name..." value="<%= search %>" class="search-input">
        <button type="submit" class="btn btn-small">Search</button>
      </form>
      <% if (participants && participants.length > 0) { %>
        <table class="data-table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th>Total Donations</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% participants.forEach(p => { %>
              <tr>
                <td><%= p.participant_first_name %> <%= p.participant_last_name %></td>
                <td><%= p.email %></td>
                <td><%= p.participant_role || 'N/A' %></td>
                <td>$<%= parseFloat(p.total_donations || 0).toFixed(2) %></td>
                <td class="actions">
                  <a href="/participants/<%= p.id %>" class="btn btn-small">View</a>
                  <% if (isManager) { %>
                    <a href="/participants/<%= p.id %>/edit" class="btn btn-small">Edit</a>
                    <form method="post" action="/participants/<%= p.id %>/delete" style="display:inline;">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button type="submit" class="btn btn-small btn-danger" onclick="return confirm('Delete this participant?');">Delete</button>
                    </form>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <p class="text-muted">No participants found</p>
      <% } %>
    </div>
  </main>
  <footer class="footer">
    <p>&copy; 2025 Ella Rises</p>
  </footer>
</body>
</html>
