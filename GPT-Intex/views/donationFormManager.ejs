<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= donation ? 'Edit Donation' : 'Record Donation' %> - Ella Rises</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav class="navbar">
    <div class="nav-container">
      <div class="nav-brand">üéµ Ella Rises</div>
      <ul class="nav-menu">
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/donations">Donations</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
  </nav>
  <main class="main-container">
    <% if (error_message) { %>
      <div class="alert alert-error">‚ùå <%= error_message %></div>
    <% } %>
    <div class="container form-container">
      <h1><%= donation ? 'Edit Donation' : 'Record New Donation' %></h1>
      <form method="POST" action="<%= donation ? '/donations/' + donation.id + '/edit' : '/donations/add' %>" class="form">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        
        <div class="form-group">
          <label for="participantId">Participant *</label>
          <select id="participantId" name="participantId" required>
            <option value="">-- Select Participant --</option>
            <% participants.forEach(p => { %>
              <option value="<%= p.id %>" <%= donation && donation.participant_id === p.id ? 'selected' : '' %>>
                <%= p.participant_first_name %> <%= p.participant_last_name %> (<%= p.email %>)
              </option>
            <% }); %>
          </select>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="amount">Donation Amount (USD) *</label>
            <div class="input-with-prefix">
              <span class="currency">$</span>
              <input type="number" id="amount" name="amount" step="0.01" min="0.01" value="<%= donation ? parseFloat(donation.donation_amount).toFixed(2) : '' %>" required>
            </div>
          </div>
          <div class="form-group">
            <label for="date">Donation Date *</label>
            <input type="date" id="date" name="date" value="<%= donation ? donation.donation_date : '' %>" required>
          </div>
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Save</button>
          <a href="/donations" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </main>
  <footer class="footer">
    <p>&copy; 2025 Ella Rises</p>
  </footer>
</body>
</html>
