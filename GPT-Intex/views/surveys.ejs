<%# We made this surveys page to show submitted survey scores linked to events and participants. %>
<!-- FILE: views/surveys.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Surveys - Ella Rises</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav class="navbar">
    <div class="nav-container">
      <div class="nav-brand">üéµ Ella Rises</div>
      <ul class="nav-menu">
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/surveys">Surveys</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
  </nav>
  <main class="main-container">
    <% if (error_message) { %>
      <div class="alert alert-error">‚ùå <%= error_message %></div>
    <% } %>
    <% if (success_message) { %>
      <div class="alert alert-success">‚úÖ <%= success_message %></div>
    <% } %>
    <div class="container">
      <div class="page-header">
        <h1>Surveys</h1>
        <% if (isManager) { %>
          <a href="/surveys/add" class="btn btn-primary">+ Add Survey</a>
        <% } %>
      </div>
      <form method="get" class="search-form">
        <input type="text" name="search" placeholder="Search by event or participant..." value="<%= search %>" class="search-input">
        <button type="submit" class="btn btn-small">Search</button>
      </form>
      <% if (surveys && surveys.length > 0) { %>
        <table class="data-table">
          <thead>
            <tr>
              <th>Participant</th>
              <th>Event</th>
              <th>Submitted</th>
              <th>Overall Score</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% surveys.forEach(survey => { %>
              <tr>
                <td><%= survey.participant_name %></td>
                <td><%= survey.event_name %></td>
                <td><%= new Date(survey.survey_submission_date).toLocaleDateString() %></td>
                <td><span class="badge badge-primary"><%= survey.survey_overall_score %>/10</span></td>
                <td class="actions">
                  <% if (isManager) { %>
                    <a href="/surveys/<%= survey.id %>/edit" class="btn btn-small">Edit</a>
                    <form method="post" action="/surveys/<%= survey.id %>/delete" style="display:inline;">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button type="submit" class="btn btn-small btn-danger" onclick="return confirm('Delete this survey?');">Delete</button>
                    </form>
                  <% } else { %>
                    <span class="text-muted">View</span>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <p class="text-muted">No surveys found</p>
      <% } %>
    </div>
  </main>
  <footer class="footer">
    <p>&copy; 2025 Ella Rises</p>
  </footer>
</body>
</html>
