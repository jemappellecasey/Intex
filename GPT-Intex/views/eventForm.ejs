<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= event ? 'Edit Event' : 'Add Event' %> - Ella Rises</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav class="navbar">
    <div class="nav-container">
      <div class="nav-brand">ðŸŽµ Ella Rises</div>
      <ul class="nav-menu">
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/events">Events</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
  </nav>
  <main class="main-container">
    <div class="container form-container">
      <h1><%= event ? 'Edit Event' : 'Add New Event' %></h1>
      <form method="POST" action="<%= event ? '/events/' + event.id + '/edit' : '/events/add' %>" class="form">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        
        <div class="form-group">
          <label for="name">Event Name *</label>
          <input type="text" id="name" name="name" value="<%= event ? event.event_name : '' %>" required>
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <textarea id="description" name="description" rows="4"><%= event ? event.event_description : '' %></textarea>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="type">Type</label>
            <input type="text" id="type" name="type" value="<%= event ? event.event_type : '' %>" placeholder="e.g., Workshop, Performance">
          </div>
          <div class="form-group">
            <label for="capacity">Capacity *</label>
            <input type="number" id="capacity" name="capacity" value="<%= event ? event.event_default_capacity : '' %>" required min="1">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="dateStart">Start Date *</label>
            <input type="date" id="dateStart" name="dateStart" value="<%= event ? event.event_date_time_start.split('T')[0] : '' %>" required>
          </div>
          <div class="form-group">
            <label for="timeStart">Start Time *</label>
            <input type="time" id="timeStart" name="timeStart" value="<%= event ? event.event_date_time_start.split('T')[1]?.substring(0, 5) : '' %>" required>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="dateEnd">End Date</label>
            <input type="date" id="dateEnd" name="dateEnd" value="<%= event && event.event_date_time_end ? event.event_date_time_end.split('T')[0] : '' %>">
          </div>
          <div class="form-group">
            <label for="timeEnd">End Time</label>
            <input type="time" id="timeEnd" name="timeEnd" value="<%= event && event.event_date_time_end ? event.event_date_time_end.split('T')[1]?.substring(0, 5) : '' %>">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="location">Location</label>
            <input type="text" id="location" name="location" value="<%= event ? event.event_location : '' %>" placeholder="Event location">
          </div>
          <div class="form-group">
            <label for="deadline">Registration Deadline</label>
            <input type="date" id="deadline" name="deadline" value="<%= event && event.registration_deadline ? event.registration_deadline : '' %>">
          </div>
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Save</button>
          <a href="/events" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </main>
  <footer class="footer">
    <p>&copy; 2025 Ella Rises</p>
  </footer>
</body>
</html>
