<!-- views/milestones.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Milestones</title>
  <%- include('partials/head') %>
</head>
<body>
<div class="layout">
  <%- include('partials/userbar') %>
  <aside class="sidebar">
    <div class="sidebar-brand">
      <a href="/dashboard" aria-label="Back to dashboard">
        <img src="/images/logo.png" alt="Ella Rises logo" class="brand-logo">
      </a>
    </div>
    <h2>Menu</h2>
    <nav>
      <a href="/dashboard">Dashboard</a>
      <a href="/participants">Participants</a>
      <a href="/events">Events</a>
      <a href="/surveys">Surveys</a>
      <a href="/milestones" class="active">Milestones</a>
      <a href="/donations">Donations</a>
      <% if (isManager) { %>
        <hr>
        <a href="/admin/settings">Admin Settings</a>
      <% } %>
    </nav>
  </aside>
<main class="main-content">

<h1>Milestones</h1>

<!-- Error message -->
<% if (error_message) { %>
  <div class="alert alert-error"><%= error_message %></div>
<% } %>

<!-- ============================= -->
<!-- SEARCH / FILTER SECTION       -->
<!-- ============================= -->
<% if (isManager) { %>
  <section>
    <h2 class="centered-title">Search Milestones</h2>
    <form method="get" action="/milestones" class="milestones-filter">
      <div class="compact-field">
        <label>
          Participant Name:
          <input type="text" name="participantName" value="<%= participantName || '' %>">
        </label>
      </div>

      <div class="compact-field">
        <label>
          Email:
          <input type="text" name="email" value="<%= email || '' %>">
        </label>
      </div>

      <div class="compact-field">
        <label>
          Milestone Title:
          <input type="text" name="milestoneTitle" value="<%= milestoneTitle || '' %>">
        </label>
      </div>

      <div class="date-range">
        <div class="date-field">
          <label>
            Start Date:
            <input type="date" name="startDate" value="<%= startDate || '' %>">
          </label>
        </div>

        <div class="date-field">
          <label>
            End Date:
            <input type="date" name="endDate" value="<%= endDate || '' %>">
          </label>
        </div>
      </div>

      <div class="filter-actions">
        <button type="submit">Search</button>
      </div>
    </form>
  </section>

  <hr>
<% } %>

<!-- ============================= -->
<!-- LIST + PAGINATION             -->
<!-- ============================= -->
<section>
  <h2 class="centered-title">Milestones List</h2>
  <% if (isManager || selfParticipantId) { %>
    <div class="add-milestone-actions">
      <a href="/milestones/new"><button type="button">Add Milestone</button></a>
    </div>
  <% } %>

  <% if (!milestones || milestones.length === 0) { %>
    <p>No milestones found.</p>
  <% } else { %>
    <table class="milestones-table center-table">
      <thead>
      <tr>
        <th>Participant</th>
        <th>Email</th>
        <th>Milestone Title</th>
        <th>Milestone Date</th>
        <% if (isManager || selfParticipantId) { %>
          <th>Actions</th>
        <% } %>
      </tr>
      </thead>

      <tbody>
      <% milestones.forEach(function(m) { %>
        <tr>
          <td>
            <% if (m.participantid) { %>
              <!-- Link to participant detail page -->
              <a href="/participants/<%= m.participantid %>">
                <%= m.participantfirstname %> <%= m.participantlastname %>
              </a>
            <% } else { %>
              <%= m.participantfirstname %> <%= m.participantlastname %>
            <% } %>
          </td>

          <td><%= m.email || 'N/A' %></td>
          <td><%= m.milestonetitle || 'N/A' %></td>

          <td>
            <% if (m.milestonedate) { %>
              <%= new Date(m.milestonedate).toLocaleDateString() %>
            <% } else { %>
              N/A
            <% } %>
          </td>

          <% if (isManager || (selfParticipantId && Number(selfParticipantId) === Number(m.participantid))) { %>
            <td>
              <a href="/milestones/<%= m.milestoneid %>/edit">
                <button type="button">Edit</button>
              </a>

              <% if (isManager) { %>
                <form method="post"
                      action="/milestones/<%= m.milestoneid %>/delete"
                      style="display:inline;">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <button type="submit"
                          onclick="return confirm('Are you sure you want to delete this milestone?');">
                    Delete
                  </button>
                </form>

                <form method="get"
                      action="/milestones/new"
                      style="display:inline;">
                  <input type="hidden" name="email" value="<%= m.email || '' %>">
                  <button type="submit">Add</button>
                </form>
              <% } %>
            </td>
          <% } %>
        </tr>
      <% }); %>
      </tbody>
    </table>
  <% } %>

  <!-- Pagination control (bottom) -->
  <div class="pagination pagination-centered">
    <% if (currentPage > 1) { %>
      <a href="/milestones?page=<%= currentPage - 1 %>&participantName=<%= encodeURIComponent(participantName || '') %>&email=<%= encodeURIComponent(email || '') %>&milestoneTitle=<%= encodeURIComponent(milestoneTitle || '') %>&startDate=<%= startDate || '' %>&endDate=<%= endDate || '' %>">
        <span class="btn secondary-btn">Prev</span>
      </a>
    <% } %>

    <span>Page <%= currentPage %> of <%= totalPages %></span>

    <% if (currentPage < totalPages) { %>
      <a href="/milestones?page=<%= currentPage + 1 %>&participantName=<%= encodeURIComponent(participantName || '') %>&email=<%= encodeURIComponent(email || '') %>&milestoneTitle=<%= encodeURIComponent(milestoneTitle || '') %>&startDate=<%= startDate || '' %>&endDate=<%= endDate || '' %>">
        <span class="btn secondary-btn">Next</span>
      </a>
    <% } %>
  </div>
</section>

<hr>

</main>
</div>
</body>
</html>
