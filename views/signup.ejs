<!DOCTYPE html>
<html>
<head>
  <title>Sign up</title>
  <%- include('partials/head') %>
</head>
<body>
  <div class="page-card narrow">
    <div class="signup-header">
      <a href="/login" class="btn secondary-btn">‚Üê Back to Login</a>
      <span></span>
    </div>
    <h1 class="signup-title">Sign up</h1>

    <% if (error && error.length) { %>
      <div class="alert alert-error">
        <% error.forEach(function(msg) { %>
          <p><%= msg %></p>
        <% }); %>
      </div>
    <% } %>

    <% if (info && info.length) { %>
      <div class="alert alert-info">
        <% info.forEach(function(msg) { %>
          <p><%= msg %></p>
        <% }); %>
      </div>
    <% } %>

    <% if (success && success.length) { %>
      <div class="alert alert-success">
        <% success.forEach(function(msg) { %>
          <p><%= msg %></p>
        <% }); %>
      </div>
    <% } %>

    <form method="POST" action="/signup" class="form-card">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <div>
      <label for="first">First name*</label><br>
      <input type="text" id="first" name="first" required>
    </div>

    <div>
      <label for="last">Last name*</label><br>
      <input type="text" id="last" name="last" required>
    </div>
    
    <div>
      <label for="email">Email*</label><br>
      <input type="email" id="email" name="email" required autocomplete="email">
    </div>

    <div>
      <label for="password">Password*</label><br>
      <input type="password" id="password" name="password" required autocomplete="new-password">
    </div>


    <div>
      <label for="phone">Phone (optional)</label><br>
      <input type="text" id="phone" name="phone">
    </div>

    <div>
      <label for="city">City (optional)</label><br>
      <input type="text" id="city" name="city">
    </div>

    <div>
      <label for="state">State (optional)</label><br>
      <input type="text" id="state" name="state">
    </div>

    <div>
      <label for="zip">ZIP (optional)</label><br>
      <input type="text" id="zip" name="zip">
    </div>

    <div class="form-actions centered">
      <button type="submit">Create account</button>
    </div>
    </form>
  </div>
</body>
</html>
