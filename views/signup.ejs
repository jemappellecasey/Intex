<%# We wrote this sign up page so new account can register with email and password. %>
<!DOCTYPE html>
<html>
<head>
  <title>Sign up</title>
  <%- include('partials/head') %>
  <style>
    header.top-banner {
      background-color: #3A3F3A;
      color: #FDF7F0;
      padding: 1.1rem 3rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .top-banner__brand {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-family: 'DM Serif Display', serif;
      font-size: 2rem;
      letter-spacing: 0.18em;
      text-transform: uppercase;
      white-space: nowrap;
      color: #FDF7F0;
      text-decoration: none;
    }
    .top-banner__brand-logo {
      width: 70px;
      height: 70px;
      object-fit: contain;
    }
    .top-banner__nav {
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    .top-banner__nav a {
      font-size: 0.9rem;
      color: #FDF7F0;
      text-decoration: none;
      opacity: 0.9;
    }
    .top-banner__nav a:hover {
      opacity: 1;
    }
    .top-banner__login {
      padding: 0.45rem 0.95rem;
      border-radius: 999px;
      border: 1px solid rgba(255,255,255,0.7);
      font-size: 0.85rem;
      font-weight: 600;
      text-decoration: none;
      color: #FDF7F0;
      background: transparent;
    }
    .top-banner__login:hover {
      background: rgba(255,255,255,0.09);
    }
    
    .form-card label {
      display: block;
      margin-bottom: 4px;
    }
    /* Add breathing room between each field group */
    .form-card > div {
      margin-bottom: 16px;
    }
    .form-card > div:last-of-type {
      margin-bottom: 0;
    }
  </style>
</head>
<body>
  <header class="top-banner">
    <a href="/" class="top-banner__brand">
      ELLA
      <img class="top-banner__brand-logo" src="/images/heart.png" alt="Ella Rises heart logo">
      RISES
    </a>
    <nav class="top-banner__nav">
      <a href="/donate">Donate</a>
      <a href="/login" class="top-banner__login">Staff / Participant Login</a>
    </nav>
  </header>
  <div class="page-card narrow">
    <div class="signup-header">
      <a href="/login" class="btn secondary-btn">‚Üê Back to Login</a>
      <span></span>
    </div>
    <h1 class="signup-title">Sign up</h1>

    <% if (error && error.length) { %>
      <div class="alert alert-error">
        <% error.forEach(function(msg) { %>
          <p><%= msg %></p>
        <% }); %>
      </div>
    <% } %>

    <% if (info && info.length) { %>
      <div class="alert alert-info">
        <% info.forEach(function(msg) { %>
          <p><%= msg %></p>
        <% }); %>
      </div>
    <% } %>

    <% if (success && success.length) { %>
      <div class="alert alert-success">
        <% success.forEach(function(msg) { %>
          <p><%= msg %></p>
        <% }); %>
      </div>
    <% } %>

    <form method="POST" action="/signup" class="form-card">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <div>
      <label for="first">First name*</label>
      <input type="text" id="first" name="first" required>
    </div>

    <div>
      <label for="last">Last name*</label>
      <input type="text" id="last" name="last" required>
    </div>
    
    <div>
      <label for="email">Email*</label>
      <input type="email" id="email" name="email" required autocomplete="email">
    </div>

    <div>
      <label for="password">Password*</label>
      <input type="password" id="password" name="password" required autocomplete="new-password">
    </div>


    <div>
      <label for="phone">Phone (optional)</label>
      <input type="text" id="phone" name="phone">
    </div>

    <div>
      <label for="city">City (optional)</label>
      <input type="text" id="city" name="city">
    </div>

    <div>
      <label for="state">State (optional)</label>
      <input type="text" id="state" name="state">
    </div>

    <div>
      <label for="zip">ZIP (optional)</label>
      <input type="text" id="zip" name="zip">
    </div>

    <div class="form-actions centered">
      <button type="submit">Create account</button>
    </div>
    </form>
  </div>
</body>
</html>
